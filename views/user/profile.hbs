    <div class="profile-projects fade-in">
      {{#each user.projects as |project|}}
      <a href="/project/{{project.id}}" class="project-container scale-up-center">
        <div class="profile-project">
          <img src="{{project.images}}" alt="img" class="profile-project-pic">
          <div class="project-footer">
            <p class="project-title"><strong>{{project.title}}</strong></p>
            <p><sub>by {{project.user.name}}</sub></p>
          </div>
          <hr class="project-footer-hr">
          <ul class="list-horizontal">
            {{#each project.skills as |skill|}}
            <li>
              <small>{{skill}}</small>
            </li>
            {{/each}}
          </ul>
        </div>
      </a>
      {{/each}}
    </div>
    <p><sub>Liked Projects</sub></p>
    <div class="liked-projects fade-in">
      {{#each likedProjects as |project|}}
      <a href="/project/{{project.id}}" class="project-container scale-up-center">
        <div class="project">
          <img src="{{project.images}}" alt="img" class="project-pic">
          <div class="project-footer">
            <p class="project-title"><strong>{{project.title}}</strong></p>
            <p><sub>by {{project.user.name}}</sub></p>
          </div>
          <hr class="project-footer-hr">
          <ul class="list-horizontal">
            {{#each project.skills as |skill|}}
            <li>
              <small>{{skill}}</small>
            </li>
            {{/each}}
          </ul>
        </div>
      </a>
      {{/each}}
    </div>