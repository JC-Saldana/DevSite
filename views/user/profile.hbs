{{> footer}}
<div class="profile-body fade-in">
  <div class="profile-pic-container">
    <img src="{{user.avatar}}" alt="img" class="profile-pic">
    <div>
      <p class="mt-4 text-center"> <small>{{user.currentJob}}</small> </p>
    </div>
  </div>
  <div class="profile-pic-right">
    <div class="profile-header">
      <div class="profile-header-left">
        <h1 class="user-name">{{user.name}}</h1>
        {{#if (isMyProfile userName=user.name currentUserName=currentUser.name)}}
        <a href="/user/{{user._id}}/edit" style="text-decoration: none; color:black; margin-right: 5px;" title="Edit">
          <i class="fa-solid fa-pen-to-square" style="font-size: 27px;"></i>
        </a>
        <a href="/logout" title="Logout"><i class="fa-solid fa-right-from-bracket"></i></a>
        {{/if}}
      </div>
      <div>
        <i class="fa-brands fa-linkedin-in"></i>
        <i class="fa-brands fa-github"></i>
        <i class="fa-brands fa-instagram"></i>
        <i class="fa-brands fa-facebook"></i>
      </div>
    </div>
    <hr>

{{#if user.biography}}
    <div>
      <sub>Biography</sub>
      <p>{{{user.biography}}}</p>
      <sub>Mail</sub>
      <p>{{user.email}}</p>
      <sub>Skills</sub>
      <ul class="list-horizontal">
        {{#each user.skills as |skill|}}
        <li>
          <small class="badge rounded-pill bg-secondary">{{skill}}</small>
        </li>
        {{/each}}
      </ul>
    </div>
    
    {{else}}

    <div class="rounded d-flex flex-column justify-content-center align-items-center" style="background-color: rgb(245, 245, 245); height: 20rem;">
      <h3 class="fs-5 mb-3">You have not yet completed your profile. Fill in the form.</h3>
      <a class="btn btn-dark px-3" href="/user/{{user._id}}/edit">Fill it now!</a>
    </div>

    {{/if}}

    <sub>Projects</sub>
    {{#if (isMyProfile userName=user.name currentUserName=currentUser.name)}}
    <div class="add-project my-4">
      <a href="/create/project">
        <i class="fa-solid fa-plus"></i>
        Add new project
      </a>
    </div>
    {{/if}}

    <div class="container p-0 mb-5 mt-3" >
      {{#each user.projects as |project|}}
      <a href="/project/{{project.id}}" style="text-decoration: none !important; color: white;">
      <div class="card border-0 pt-5 mb-2" style="background-image: linear-gradient(180deg, rgba(0,0,0,0.20) 35%, rgba(0,0,0,0.8) 100%), url({{project.images}}); max-width: 720px;" >
        <div class="p-3 py-4">
                <h1 class="mb-0 fs-4 mb-2" style="color: white;">{{project.title}}</h1>
                {{#each project.skills as |skill|}}
                <span class="mt-3 p-0">
                  <small class="badge rounded-pill bg-light" style="color: black;">{{skill}}</small>
                </span>
                {{/each}}
        </div>
      </div>
      </a>
      {{/each}}
    </div>