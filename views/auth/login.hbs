<div class="container py-5 h-100" style="min-width: 1000px;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
            <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                    <img src="/images/horizontal-negro.svg" alt="logo">
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Login</h3>
                    <form action="/login" method="POST">
                        <div class="row">
                            <div class="mb-4">
                                <div>
                                    <input type="text" name="email"
                                        class="form-control form-control-lg {{#if errorMessage}}is-invalid{{/if}}"
                                        placeholder="Email" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4 input-group">
                            <input type="password" name="password"
                                class="form-control form-control-lg {{#if errorMessage}}is-invalid{{/if}}"
                                placeholder="Password" />
                            <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
                                <i class="fa fa-eye-slash fa-fw"></i>
                            </button>
                        </div>
                        {{#if errorMessage}}
                        <div class="text-danger text-small mb-2">
                            {{errorMessage}}
                        </div>
                        {{/if}}
                        <div class="mt-4 pt-2 d-flex justify-content-center aling-items-center">
                            <input class="btn btn-primary btn-lg" type="submit" value="Login" />
                        </div>
                        <hr>
                        <div class="d-flex row justify-content-center">
                            <a class="btn btn-block" href="//github">
                                <i class="fa fa-github"></i> Login with Github
                            </a>
                            <a class="btn btn-block" href="/login/google">
                                <i class="fa fa-google"></i> Login with Google
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>