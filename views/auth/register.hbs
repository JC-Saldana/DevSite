<div class="container py-5 h-100" style="min-width: 1000px;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
            <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                    <img src="/images/horizontal-negro.svg" alt="logo">
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Register</h3>
                    <form action="/register" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <input type="text" name="name" class="form-control form-control-lg {{#if errors.name}}is-invalid{{/if}}"
                                    placeholder="Full name" value="{{ user.name }}" />
                                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
                            </div>

                            <div class="col-md-6 mb-4">
                                <div>
                                    <input type="text" name="email" class="form-control form-control-lg {{#if errors.email}}is-invalid{{/if}}"
                                        placeholder="Email" value="{{ user.email }}" />
                                    {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
                                </div>
                            </div>
                        </div>

                        <div class="mb-4 input-group">
                            <input type="password" name="password" class="form-control form-control-lg {{#if errors.password}}is-invalid{{/if}}"
                                placeholder="Password" />
                            <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
                                <i class="fa fa-eye-slash fa-fw"></i>
                            </button>
                            {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
                        </div>

                        <div class="mb-4">
                            <input type="text" name="currentJob" class="form-control form-control-lg"
                                placeholder="Current Job" value="{{ user.currentJob }}" />
                        </div>

                        <div class="mb-4 d-flex align-items-center">
                            <div class="form-outline datepicker w-100">
                                <label for="Biography" class="form-label">Biography</label>
                                <textarea class="form-control" name="biography" rows="3">{{ user.biography }}</textarea>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="formFile" class="form-label">Profile Image</label>
                            <input class="form-control" name="avatar" type="file">
                        </div>

                        <div class="mb-4">
                            <label for="skills" class="form-label">Your kills</label>
                            <select name="skills" class="form-select" aria-label="Default select example" multiple>
                                <option value="javascript">JavaScript</option>
                                <option value="ruby">Ruby</option>
                                <option value="go">Go</option>
                                <option value="java">Java</option>
                                <option value="python">Python</option>
                                <option value="c">C</option>
                                <option value="c++">C++</option>
                                <option value="typescript">TypeScript</option>
                            </select>
                        </div>

                        <div class="mt-4 pt-2">
                            <input class="btn btn-primary btn-lg" type="submit" value="Register" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>