{{> footer}}
<div class="container">
	<div class="row d-flex flex-column justify-content-center m-0 p-0">
		<div class=" rounded col-8 overflow-hidden header-project m-0 p-0" style="background-image: url('{{project.images}}');
		background-size: cover;
		background-position: center;
		width: 100%;
		height: 20rem;">
		</div>
		<div>
			<div class="mt-3" style="display: flex; align-items: center; justify-content: flex-start;">
				<h2 class="fs-1" style="margin-right: 15px;">{{project.title}}</h2>
				<i data-id="{{project.id}}" class="like-action fa-solid fa-heart {{#if liked}}icon-liked{{/if}}"></i>
			</div>
			<p><sub>by {{project.user.name}}</sub></p>
			<p>{{{project.description}}}</p>
			<ul class="list-horizontal">
				{{#each project.skills as |skill|}}
				<li>
					<small class="badge rounded-pill bg-secondary">{{skill}}</small>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>



