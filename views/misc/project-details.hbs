{{> footer}}
<div class="container ">
	<div class="row mt-4 d-flex justify-content-center">
		<div class="col-3 ">
			<div class="card p-5 sposition-sticky sticky-top" style="position: sticky; top: 3rem;">
				<div class="user text-center">
					<div class="profile"> <img src="{{currentUser.avatar}}" class="rounded-circle" width="130"> </div>
				</div>
				<div class="mt-3 text-center">
					<h4 class="mb-0">{{!-- {{project.user.name}} --}} {{currentUser.name}}</h4> <span class="text-muted d-block mb-2">{{currentUser.currentJob}} {{!-- {{project.user.currentJob}} --}}</span>
					<a class="btn btn-dark px-5 m-3" href="mailto: {{currentUser.email}}"><i class="fa fa-envelope"></i>   Contact</a>
				</div>
				<div class="text-center">
					<p class="mb-1 mt-3">Project develop with: </p>
						<ul class="list-horizontal">
							{{#each project.skills as |skill|}}
							<li>
							<small class="badge rounded-pill bg-secondary">{{skill}}</small>
							</li>
							{{/each}}
						</ul>

				</div>
			</div>
			
	
		</div>

		<div class="col-8">
			<div class="container fade-in">
				<div class="row d-flex flex-column justify-content-center m-0 p-0">
				<div class=" rounded overflow-hidden header-project m-0 p-0" style="background-image: url('{{project.images}}');
				background-size: cover;
				background-position: center;
				width: 100%;
				height: 20rem;">
				</div>

				<div>
					<div class="mt-3" style="display: flex; align-items: center; justify-content: flex-start;">
						<h2 class="fs-1" style="margin-right: 15px;">{{project.title}}</h2>
						<i data-id="{{project.id}}" class="like-action fa-solid fa-heart {{#if liked}}icon-liked{{/if}}"></i>
					</div>
					<p>{{{project.description}}}</p>
				</div>
				</div>
			</div>
			
{{!-- Comment --}}
<div class="container fade-in mb-4">
	<h3 class="mt-4">Comment! ðŸ¤™</h3>
	<div class="rounded p-3" style="background-color: rgb(250, 250, 250);">
		<form action="/comment/{{project._id}}" method="POST">
			<div class="d-flex flex-row mt-4">
				<img class="img-fluid rounded-circle m-2" src="{{currentUser.avatar}}" width="50">
				<input name="comment" type="text" class="form-control" placeholder="Add comment">
			</div>
			<div class="d-flex justify-content-end mt-2">
				<button class="btn btn-secondary" type="submit">Comment</button>
			</div>
		</form>
	</div>

	{{#if project.comments}}
	<hr>

	<div class="row d-flex justify-content-center">
		<h3 class="fs-5">Comments: {{project.comments.length}}</h3>
		<div>
			{{#each project.comments as |comment|}}
			<div class="card mb-4">
				<div class="card-body position-relative">
					{{#isMyAcount ../currentUser.name comment.user.name}}
						<form
						class="d-flex justify-content-center align-items-center position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary"
						action="/comment/{{comment.id}}/delete" method="POST"
						style="height: 30px; width: 30px; top:115px;">
							<input type="text" name="id" class="d-none" value={{../project._id}}>
							<button class="btn" style="font-size: 1rem; color: rgb(255, 255, 255);" type="submit"><i
							class="fa fa-close"></i></button>
						</form>
					{{/isMyAcount}}

					<p>{{comment.comment}}</p>
					<div class="d-flex flex-row align-items-center mb-2">
						<img class="rounded-circle" src="{{user.avatar}}" alt="avatar" width="25" height="25" />
						<sub class="small mb-0 ms-2 d-flex flex-row align-items-center">{{comment.user.name}} </sub>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
	{{else}}
	<div class="mt-3 border p-4">
		<h3 class="fs-5 text-center ">No comments yet! be the first!</h3>
	</div>
	{{/if}}
</div>

		</div>
	</div>
</div>





